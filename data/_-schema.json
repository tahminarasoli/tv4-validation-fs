{
  "title": "Sign in",
  "description": "Validation of user information",
  "type": "object",
  "properties": {
      "users": {
          "type": "array",
          "items": {
              "type":"object",
                "properties":{
                "email": {
                  "type": "string",
                  "format": "email"
              },
              "name": {
                  "type": "string",
                  "minLength": 5
              },
              "password": {
                  "type": "string",
                  "pattern": "^(?=.*[0-9])(?=.*[!@#$%^&*])(?=.*[a-z])(?=.*[A-Z]).{8,}$"
              }
                }
          },
          "required": [
              "email",
              "name",
              "password"
          ]
      }
  }
}